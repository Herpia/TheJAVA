package day06;

public class User {
    private String id;
    private String password;

    // ìƒì„±ì
    public User(String id, String password) {
        this.id = id;
        this.password = password;
    }

    // Getter (ë¡œê·¸ì¸ í™•ì¸ ë° ì •ë³´ ì¶œë ¥ ì‹œ ì‚¬ìš©)
    public String getId() {
        return id;
    }

    public String getPassword() {
        return password;
    }

    // ê°ì²´ì˜ ì •ë³´ë¥¼ { id, password } í˜•ì‹ìœ¼ë¡œ ë°˜í™˜
    @Override
    public String toString() {
        return "{ " + id + ", " + password + " }";
    }
}
package day06;

import java.util.Scanner;

public class UserAPP {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        User[] users = new User[100]; // ìµœëŒ€ 100ëª…ì˜ ì •ë³´ë¥¼ ì €ì¥í•  ê°ì²´ ë°°ì—´
        int userCount = 0; // í˜„ì¬ ê°€ì…ëœ ì‚¬ìš©ì ìˆ˜

        while (true) {
            System.out.println("============================");
            System.out.println("1. Sign Up");
            System.out.println("2. Login");
            System.out.println("3. Print All Users");
            System.out.println("4. Exit");
            System.out.println("============================");
            System.out.print("ì ˆì°¨ë¥¼ ì„ íƒ: ");
            
            int menu = sc.nextInt();
            sc.nextLine(); // ë²„í¼ ë¹„ìš°ê¸°

            if (menu == 1) { // íšŒì›ê°€ì…
                System.out.print("Id: ");
                String id = sc.nextLine();
                System.out.print("Password: ");
                String pwd = sc.nextLine();

                // ë°°ì—´ì— ìƒˆë¡œìš´ User ê°ì²´ ìƒì„± ë° ì €ì¥
                users[userCount] = new User(id, pwd);
                userCount++;
                System.out.println("íšŒì›ê°€ì…ì´ ì™„ë£Œ");

            } else if (menu == 2) { // ë¡œê·¸ì¸
                System.out.print("Id: ");
                String inputId = sc.nextLine();
                System.out.print("Password: ");
                String inputPwd = sc.nextLine();

                boolean loginSuccess = false;
                for (int i = 0; i < userCount; i++) {
                    if (users[i].getId().equals(inputId) && users[i].getPassword().equals(inputPwd)) {
                        loginSuccess = true;
                        break;
                    }
                }

                if (loginSuccess) {
                    System.out.println("ë¡œê·¸ì¸ ì™„ë£Œ");
                } else {
                    System.out.println("ì•„ì´ë”” ë˜ëŠ” ë¹„ë°€ë²ˆí˜¸ ì˜¤ë¥˜");
                }

            } else if (menu == 3) { // ëª¨ë“  ì‚¬ìš©ì ì¶œë ¥
                for (int i = 0; i < userCount; i++) {
                    System.out.println(users[i].toString());
                }

            } else if (menu == 4) { // ì¢…ë£Œ
                System.out.println("í”„ë¡œê·¸ë¨ì„ ì¢…ë£Œ");
                break;
            } else {
                System.out.println("ì˜ëª»ëœ ì…ë ¥");
            }
        }
        sc.close();
    }
}
package day06;

public class Vehicle {
	String model;
	int speed;
	
	void setSpeed(int speed) {
		this.speed = speed;
	}
	void turn() {
		System.out.println("í„´");
	}
	void move() {
        System.out.println(model + "ì´(ê°€) ì‹œì† " + speed + "kmë¡œ ì´ë™í•©ë‹ˆë‹¤.");
    }
}
