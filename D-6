package day06;

public class CarAPP {
	public static void main(String[] args) {
        // SportsCar ê°ì²´ ìƒì„±
        SportsCar myCar = new SportsCar();
        
        // 1. ë°ì´í„° ì„¤ì • (ìƒì†ë°›ì€ í•„ë“œë“¤)
        myCar.model = "Benz AMG GT"; // Vehicleë¡œë¶€í„° ìƒì†
        myCar.speed = 120;           // Vehicleë¡œë¶€í„° ìƒì†
        myCar.seatCount = 2;         // Carë¡œë¶€í„° ìƒì†
        myCar.turbo = true;        // SportsCar ê³ ìœ  í•„ë“œ

        // 2. ê¸°ëŠ¥ ì‹¤í–‰
        System.out.println("=== ìŠ¤í¬ì¸ ì¹´ ì •ë³´ ì¶œë ¥ ===");
        System.out.println("ëª¨ë¸ëª…: " + myCar.model);
        System.out.println("ì¢Œì„ìˆ˜: " + myCar.seatCount);
        
        myCar.move();        // ë¶€ëª¨(Vehicle) ê¸°ëŠ¥
        myCar.PushAccel();   // ë¶€ëª¨(Car) ê¸°ëŠ¥
        myCar.setTurbo();  // ë³¸ì¸(SportsCar) ê¸°ëŠ¥
    }
}

package day06;

public class MilitaryAPP {
    public static void main(String[] args) {
        // Tank ê°ì²´ ìƒì„±
        Tank K2 = new Tank();
        K2.model = "K2 í‘í‘œ";
        K2.speed = 70;
        K2.armorThickness = 500;
        K2.cannonCaliber = 120.0;

        // APC ê°ì²´ ìƒì„±
        APC K200 = new APC();
        K200.model = "K200 ì¥ê°‘ì°¨";
        K200.speed = 74;
        K200.armorThickness = 30;
        K200.maxPassengers = 12;

        // ì‹¤í–‰ í™•ì¸
        System.out.println("--- ì „ì°¨ ê¸°ë™ ---");
        K2.move();    // Vehicleë¡œë¶€í„° ìƒì†
        K2.protect(); // ArmoredCarë¡œë¶€í„° ìƒì†
        K2.fire();    // Tank ê³ ìœ  ê¸°ëŠ¥

        System.out.println("\n--- APC ê¸°ë™ ---");
        K200.move();
        K200.protect();
        K200.deployTroops(); // APC ê³ ìœ  ê¸°ëŠ¥
    }
}
package day06;

public class Person {
	//ì¶”ìƒí™”
	String name, addr;
	int age;
	
	//ê¸°ë³¸ìƒì„±ì
	public Person() {
		
	}
	
	//ì¸ììƒì„±ì
	public Person(String name, String addr, int age) {
		this.name = name;
		this.addr = addr;
		this.age = age;
	}
	
	//ì¸ê°„ì •ë³´ ì¶œë ¥ë©”ì†Œë“œ
	public void showInfo() {
		System.out.println("___Person Info___");
		System.out.println("ì´ë¦„: "+ name);
		System.out.println("ì£¼ì†Œ: "+ addr );
		System.out.println("ë‚˜ì´: "+ age);
	}
	public String getName() {
		return name;
	}
}

