package day06;

public class SportsCar extends Car{
	boolean turbo;
	public void setTurbo() {
		if (turbo) {
            System.out.println("ğŸš€ [AMG ëª¨ë“œ] í„°ë³´ ë¶€ìŠ¤íŠ¸ ê°€ë™! ì¶œë ¥ì´ ê¸‰ìƒìŠ¹í•©ë‹ˆë‹¤.");
            this.speed += 50;
            System.out.println("í˜„ì¬ ì†ë„: " + speed + "km/h");
        } else {
            System.out.println("ì´ ëª¨ë¸ì€ í„°ë³´ ê¸°ëŠ¥ì„ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.");
        }
    }
}
