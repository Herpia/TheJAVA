import java.util.ArrayList;

public class JobAPP {

    public static void main(String[] args) {

        Human human1 = new Human("김xx", 30, "남자", true);
        Human human2 = new Human("박xx", 25, "여자", true);

        ArrayList<Human> alist = new ArrayList<>();

        alist.add(human1);
        alist.add(human2);

        // 출력 (getter / setter 사용)
        for (Human h : alist) {
            System.out.println("이름: " + h.getName());
            System.out.println("성별: " + h.getGender());
            System.out.println("나이: " + h.getAge());

            // setter 사용 예
            h.setAge(h.getAge());   // 값 유지(우회 접근 예시)

            System.out.println("------");
        }
    }
}



public class Npz {
	public static void main(String[]args) {
		
	Pizza pizza = new Pizza();
	Pizza pizza1 = new Pizza();
	Pizza pizza2 = new Pizza(10, "페퍼로니피자");
	
	pizza1.type = "치즈피자";
	pizza1.size = 5;
	
	System.out.println(pizza.type + pizza.size);
	System.out.println(pizza1.type + pizza.size);
	System.out.println(pizza2.type + pizza.size);
	
	}
	

}

public class Pizza

{ 
		int size;
		String type;
		
		public Pizza() {
				size = 12;
				type = "슈퍼슈프림";
		}
		public Pizza(int s, String t) {
				size = s;
				type = t;
		}
		public static void main(String[] args) {
				Pizza obj1 = new Pizza();
				System.out.println("("+obj1.type+ " , "+obj1.size+",)");
				
				Pizza obj2 = new Pizza(24, "포테이토");
				System.out.println("("+obj2.type+ " , "+obj2.size+",)");
		}
}
public class TV {
	//데이터 은닉 private(캡슐화) Set Get 메소드로 접근간으
    private int chanel;
    private int volume;
    private boolean onOff;
    //기본 생성자
    public TV() {}
    
    //인자 생성자...(int c, int v, boolean on)
    public TV(int chanel, int volumne, boolean onOff) {
    	this.chanel = chanel;
    	this.volume = volume;
    	this.onOff = onOff;
    }
    
    // setter 메소드(은닉화접근
    void setChanel(int chanel) {
    	this.chanel = chanel;
    }
    void setVolume(int volume) {
    	this.volume = volume;
    }
    void setOnOff(int onoff) {
    	this.onOff = onOff;
    }
    
    //getter 메소드(은닉화접근
    int getChanel() {
    	return chanel;
    }
    int getVolume() {
    	return volume;
    }
    boolean isOnOff() {
    	return onOff;
    }
    
    void turnOn() {
        onOff = true;
        System.out.println("전원 켜짐");
    }

    void turnOff() {
        onOff = false;
        System.out.println("전원 꺼짐");
    }

    void changeChanel(int c) {
        chanel = c;
        System.out.println("채널 변경: " + chanel);
    }

    void volume(int v) {
        volume++;
        System.out.println("볼륨조절: " + volume);
    }
}
