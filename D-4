public class Account {

    // 필드 은닉화 + 추상화
    private int regNumber;
    private String name;
    private int balance;

    // 기본 생성자
    public Account() {}

    // 인자 생성자
    public Account(int reg, String name, int balance) {
        this.regNumber = reg;
        this.name = name;
        this.balance = balance;
    }

    // setter method (설정자)
    public void setRegNumber(int reg) {
        this.regNumber = regNumber;
    }

    public void setName(String name) {
        this.name = name;
    }

    public void setBalance(int balance) {
        if (balance >= 0) {     // 유효성 검사
            this.balance = balance;
        }
    }

    // getter method (접근자)
    public int getRegNumber() {
        return regNumber;
    }

    public String getName() {
        return name;
    }

    public int getBalance() {
        return balance;
    }

    // 테스트용 main
    public static void main(String[] args) {
        Account obj = new Account(123456789, "홍길동", 10000);

        System.out.println("하나계좌");
        System.out.println("계좌번호: 123-456-789");
        System.out.println("이름은 " + obj.getName() +
                " 통장잔고는 " + obj.getBalance() + "원입니다.");
    }
}
public class Circle {
	double radius;
	String color;
	
	double printArea() {
		return 3.14*radius*radius;
	}
	void setRadius(double ra) {
		radius = ra;
	}
}

import java.util.ArrayList;

public class ClassTst {
    public static void main(String[] args) {
        Circle obj;
        TV obj2;

        obj = new Circle();
        obj2 = new TV();   
        Circle obj3 = new Circle();
        TV tv1 = new TV(5, 0, true);

        obj.radius = 12.5;
        obj.color = "빨강";
        obj3.setRadius(13.5);

        double area = obj.printArea();
        System.out.println("반지름이 " + obj.radius + "인 원의 면적은 " + area + "입니다.");

        //obj2.chanel = 9;
        //obj2.volume = 1;
        obj2.setChanel(9);
        obj2.setVolume(1);

        obj2.changeChanel(13);
        obj2.volume(5);
        obj2.turnOff();

        ArrayList<TV> alist = new ArrayList<>();
        ArrayList<Circle> alist2 = new ArrayList<>();

        alist.add(obj2);
        alist2.add(obj);
        alist2.add(obj3);

        for (TV t : alist) {
            System.out.println(t.getChanel());
        }

        for (Circle c : alist2) {
            System.out.println(c.radius);
        }
    }
}

public class Human {
    private String name;
    private String gender;
    private int age;
    private boolean onoff;

    public Human() {}

    // 인자 생성자
    public Human(String name, int age, String gender, boolean onOff) {
        this.name = name;
        this.age = age;
        this.gender = gender;
        this.onoff = onOff;
    }

    /* Getter 메소드 */
    public String getName() {
        return name;
    }

    public String getGender() {
        return gender;
    }

    public int getAge() {
        return age;
    }

    public boolean isOnoff() {
        return onoff;
    }

    // Setter 메소드
    public void setName(String name) {
        this.name = name;
    }

    public void setGender(String gender) {
        this.gender = gender;
    }

    public void setAge(int age) {
        if (age >= 0) {          // 유효성 검사(선택)
            this.age = age;
        }
    }

    public void isOnoff(boolean onoff) {
        this.onoff = onoff;
    }

    /* 기존 기능 메소드 */
    void lifeOn() {
        onoff = true;
        System.out.println("생존");
    }

    void lifeOff() {
        onoff = false;
        System.out.println("사망");
    }

    void printName() {
        System.out.println("이름: " + name);
    }

    void printGender() {
        System.out.println("성별: " + gender);
    }

    void changeAge(int a) {
        setAge(a);   // setter 사용 (권장)
        System.out.println("나이: " + age);
    }
}

